<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-md-12">
    <div class="card">
      <div class="card-header card-header-primary">
        <h4 class="card-title ">Dueños</h4>
        <p class="card-category">Lista de dueños existentes</p>
      </div>
      <div> 
      <%= link_to 'Nuevo Dueño', new_owner_path if can? :create, :owner %>
      </div>
      <div class="card-body">
        <div class="table-responsive">
          <table class="table">
            <thead class="text-primary">
              <th>Nombre</th>
              <th>Rut</th>
              <th colspan="3"></th>
            </thead>
            <tbody>
              <% @owners.each do |owner| %>
                <tr>
                  <td><%= owner.name %></td>
                  <td><%= owner.rut %></td>
                  <td><%= link_to 'Detalle', owner %></td>
                  <td><%= link_to 'Editar', edit_owner_path(owner) %></td>
                  <td><%= link_to 'Eliminar', owner, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>


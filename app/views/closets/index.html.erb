<p id="notice"><%= notice %></p>

<h1>Closets</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Value</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @closets.each do |closet| %>
      <tr>
        <td><%= closet.name %></td>
        <td><%= closet.value %></td>
        <td><%= link_to 'Show', closet %></td>
        <td><%= link_to 'Edit', edit_closet_path(closet) %></td>
        <td><%= link_to 'Destroy', closet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Closet', new_closet_path %>

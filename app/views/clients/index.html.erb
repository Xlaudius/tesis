<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-md-12">
    <div class="card">
      <div class="card-header card-header-primary">
        <h4 class="card-title ">Clientes</h4>
        <p class="card-category">Lista de clientes existentes</p>
      </div>
      <div> 
      <%= link_to 'Nuevo Cliente', new_client_path if can? :create, :client %>
      </div>
      <div class="card-body">
        <div class="table-responsive">
          <table class="table">
            <thead class="text-primary">

              <th>Nombre</th>
              <th>Contacto</th>
              <th>Numero de contacto</th>
              <th>Disponibilidad</th>
              <th>Tipo Cliente</th>
              <th colspan="3"></th>
  
            </thead>

            <tbody>
              <% @clients.each do |client| %>
                <tr>
                  <td><%= client.name %></td>
                  <td><%= client.contact %></td>
                  <td><%= client.number %></td>
                  <td><%= client.available %></td>
                  <td><%= client.client_type.name %></td>
                  <td><%= link_to 'Detalles', client if can? :read, :client %></td>
                  <td><%= link_to 'Editar', edit_client_path(client) if can? :update, :client %></td>
                  <td><%= link_to 'Eliminar', client, method: :delete, data: { confirm: 'Seguro que desea eliminar el cliente?' } if can? :destroy, :client %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>

        <%= paginate @clients %>
        <br>
    
